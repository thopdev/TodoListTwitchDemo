<nav class="flex items-center justify-between flex-wrap bg-green-500 p-6">
    <div class="flex items-center flex-no-shrink text-white mr-6">

        <img class="transition duration-1000 ease-in-out w-16 transform hover:-translate-y-1 hover:scale-150 hover:rotate-720" src="/images/ThomasLogo.png" />
        <span class="font-semibold text-xl tracking-tight">Todo App</span>
    </div>
    <div class="block lg:hidden">
        <button class="flex items-center px-3 py-2 border rounded text-teal-300 border-teal-500 hover:text-white hover:border-white">
            <svg class="h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
        </button>
    </div>
    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
        <div class="text-sm lg:flex-grow">
            <NavLink class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
            @if (TodoLists != null)
            {
                @foreach (var list in TodoLists)
                {
                    <NavLink class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" href="@("list/" + @list.Id)" Match="NavLinkMatch.Prefix">
                        @list.Name
                    </NavLink>
                }
            }
            <NavLink class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" href="todolist/overview" Match="NavLinkMatch.Prefix">
                Manage List
            </NavLink>
        </div>
    </div>
    <div class="w-auto justify-self-end ">
        <a href=".auth/logout" class="text-xl text-center w-full text-white font-semibold">
            @UserName
        </a>
        <br/>
        <a class="w-full text-center text-white font-semibold select-all">
            @UserId
        </a>
    </div>
</nav>